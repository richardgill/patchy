{
  "name": "patchy-cli",
  "version": "0.0.27",
  "description": "A CLI tool for managing Git patch workflows.",
  "type": "module",
  "bin": {
    "patchy": "./bin/patchy.cjs"
  },
  "files": [
    "bin",
    "schema.json",
    "assets"
  ],
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "build-single": "bun run ./scripts/build.ts --single",
    "check": "bun run scripts/check.ts",
    "check-fix": "biome check --write --error-on-warnings --diagnostic-level=warn",
    "misc-checks": "bun run scripts/misc-checks.ts",
    "changeset": "changeset",
    "changeset-version": "changeset version && bun run scripts/post-version-bump.ts",
    "dev": "bun run src/cli.ts",
    "knip": "knip-bun",
    "local-ci": "bun run scripts/local-ci.ts",
    "prepare": "[ \"$DEPENDABOT\" = true ] || [ -n \"$CI\" ] || lefthook install",
    "typecheck": "tsgo --noEmit",
    "test": "bun run scripts/test.ts",
    "test-watch": "bun test --watch",
    "test-coverage": "bun test --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "=2.3.11",
    "@changesets/changelog-github": "=0.5.2",
    "@changesets/cli": "=2.29.8",
    "@types/node": "=25.0.3",
    "@types/pluralize": "=0.0.33",
    "@typescript/native-preview": "=7.0.0-dev.20251230.1",
    "bun-types": "=1.3.4",
    "knip": "=5.82.1",
    "lefthook": "=2.0.15",
    "syncpack": "=13.0.4",
    "typescript": "=5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "=1.0.0-alpha.9",
    "@stricli/core": "=1.2.5",
    "chalk": "=5.6.2",
    "diff": "=8.0.3",
    "es-toolkit": "=1.44.0",
    "jsonc-parser": "=3.3.1",
    "ora": "=9.0.0",
    "pluralize": "=8.0.0",
    "simple-git": "=3.30.0",
    "untildify": "=6.0.0",
    "zod": "=4.3.5"
  },
  "peerDependencies": {
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/richardgill/patchy"
  },
  "optionalDependencies": {
    "patchy-cli-darwin-arm64": "=0.0.27",
    "patchy-cli-darwin-x64": "=0.0.27",
    "patchy-cli-linux-arm64": "=0.0.27",
    "patchy-cli-linux-x64": "=0.0.27",
    "patchy-cli-windows-x64": "=0.0.27"
  },
  "publishConfig": {
    "access": "public"
  }
}
