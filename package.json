{
  "name": "@richardgill/patchy",
  "version": "0.0.0",
  "description": "A CLI tool for managing Git patch workflows.",
  "bin": {
    "patchy": "./dist/cli.js"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && tsgo",
    "clean": "rimraf dist",
    "check-fix": "biome check --write",
    "check": "biome check",
    "changeset": "changeset",
    "changeset-version": "changeset version",
    "changeset-publish": "pnpm build && changeset publish",
    "dev": "tsx src/cli.ts",
    "prepare": "lefthook install",
    "typecheck": "tsgo --noEmit",
    "test": "vitest",
    "test-unit": "vitest run --project unit",
    "test-e2e": "vitest run --project e2e",
    "test-watch": "vitest --watch",
    "test-coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.13",
    "@typescript/native-preview": "7.0.0-dev.20250712.1",
    "@vitest/coverage-v8": "3.2.4",
    "lefthook": "^1.12.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4",
    "zx": "^8.7.2"
  },
  "dependencies": {
    "@stricli/core": "^1.2.0",
    "enquirer": "^2.4.1",
    "es-toolkit": "^1.39.8",
    "yaml": "^2.8.0",
    "zod": "^4.0.13"
  },
  "peerDependencies": {
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "git",
    "patches",
    "patch",
    "fork"
  ],
  "author": "Richard Gill",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/richardgill/patchy"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22.0.0"
  },
  "sideEffects": false
}
